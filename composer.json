{
    "name": "vebo/shasha",
    "description": "API Wrapper for populer TV/Movies/Animes services",
    "homepage": "https://devdocs.vebo.tn/code/shasha/",
    "authors": [
        {
            "name": "Mondher Vallejo",
            "email": "developers@vebo.tn"
        }
    ],
    "support": {
        "issues": "https://github.com/vebotv/shasha/issues",
        "source": "https://github.com/vebotv/shasha"
    },
    "type": "library",
    "license": "MIT",
    "keywords": ["TV", "Movies", "Animes"],
    "require": {
        "illuminate/support": "^6.11",
        "spatie/url": "^1.3",
        "guzzlehttp/guzzle": "^6.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "autoload": {
        "psr-4": {
            "Vebo\\Shasha\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vebo\\Shasha\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "codestyle": [
            "php-cs-fixer fix --config=.php_cs --allow-risky yes"
        ],
        "test": [
            "phpunit test"
        ]
    }
}